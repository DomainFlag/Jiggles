<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/album_thumbnail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/search_album_thumbnail"
        tools:src="@drawable/thumbnail"/>

    <TextView
        android:id="@+id/album_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_margin_relative"
        android:paddingStart="@dimen/activity_margin_relative"
        android:paddingRight="@dimen/activity_margin_relative"
        android:paddingEnd="@dimen/activity_margin_relative"
        android:paddingBottom="@dimen/activity_margin_sibling"
        android:paddingTop="@dimen/activity_margin_component"
        android:textColor="@color/primaryTextColor"
        android:layout_below="@id/album_thumbnail"
        tools:text="@string/app_tools_placeholder"/>

    <TextView
        android:id="@+id/album_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_margin_relative"
        android:paddingStart="@dimen/activity_margin_relative"
        android:paddingRight="@dimen/activity_margin_relative"
        android:paddingEnd="@dimen/activity_margin_relative"
        android:paddingBottom="@dimen/activity_margin_sibling"
        android:paddingTop="@dimen/activity_margin_sibling"
        android:textColor="@color/primaryTextColor"
        android:layout_below="@id/album_name"
        tools:text="@string/app_tools_placeholder"/>

</RelativeLayout>