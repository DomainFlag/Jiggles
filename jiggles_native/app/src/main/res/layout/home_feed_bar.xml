<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/utilities"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_margin_closer"
    android:layout_alignBottom="@id/thumbnail"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="horizontal"
    tools:background="@color/iconsTextColor">

    <TextView
        android:id="@+id/like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_sibling"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="8dp"
        android:drawableLeft="@drawable/ic_like"
        android:drawablePadding="@dimen/activity_margin_relative"
        android:drawableTint="@color/primaryTextColor"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/activity_text_span"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/comment"
        app:layout_constraintEnd_toStartOf="@+id/comment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/comment"
        tools:text="@string/app_tools_placeholder_number"/>

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_sibling"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:drawableLeft="@drawable/ic_chat"
        android:drawablePadding="@dimen/activity_margin_relative"
        android:drawableTint="@color/primaryTextColor"
        android:text="@string/forum_thread_comment"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/activity_text_span"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/author"
        app:layout_constraintEnd_toStartOf="@+id/author"
        app:layout_constraintStart_toEndOf="@+id/like"
        app:layout_constraintTop_toTopOf="@+id/author"/>

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="4dp"
        android:drawableTint="@color/primaryTextColor"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/activity_text_span"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/comment"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_tools_placeholder"/>

</android.support.constraint.ConstraintLayout>