<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/iconsTextColor">

    <LinearLayout
        android:id="@+id/update_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_margin_relative"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="@dimen/activity_margin_relative"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/update_account"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    tools:src="@drawable/ic_account"/>

                <TextView
                    android:id="@+id/update_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_margin_relative"
                    tools:text="@string/forum_update_like"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:paddingVertical="@dimen/activity_margin_relative"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/update_content_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_text_paragraph"
                    android:layout_marginVertical="@dimen/activity_margin_sibling"
                    tools:text="@string/update_content_title_placeholder"/>

                <TextView
                    android:id="@+id/update_content_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/activity_text_subparagraph"
                    android:layout_marginVertical="@dimen/activity_margin_sibling"
                    tools:text="@string/update_content_subtitle_placeholder"/>

            </LinearLayout>

            <TextView
                android:id="@+id/update_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/pleasureColor"
                android:textSize="@dimen/activity_text_subheader"
                android:text="@string/forum_update_action"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/update_caption"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="@string/update_content_caption_description"
            tools:src="@drawable/thumbnail"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/secondaryColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/home_feed_bar"/>

    </LinearLayout>

</LinearLayout>