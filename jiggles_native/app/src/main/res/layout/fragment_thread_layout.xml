<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/activity_margin_section"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <ImageView
        android:id="@+id/thread_thumbnail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="@dimen/activity_margin_section"
        android:contentDescription="@string/forum_thread_thumbnail_description"
        android:src="@drawable/ic_share_file" />

    <EditText
        android:id="@+id/thread_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_edit_text_normal"
        android:lines="6"
        android:minLines="6"
        android:padding="@dimen/activity_margin_component"
        android:hint="@string/forum_thread_creator_content_hint"
        android:inputType="textImeMultiLine"/>

    <Button
        android:id="@+id/thread_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_margin_relative"
        android:text="@string/forum_thread_creator_create"/>

</LinearLayout>