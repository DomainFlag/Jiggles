<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primaryTextColor</item>
    </style>

    <style name="AppThemeBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primaryTextColor</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ExoMediaButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/exo_player_button_dimen</item>
        <item name="android:layout_height">@dimen/exo_player_button_dimen</item>
        <item name="android:layout_margin">@dimen/activity_margin_closer</item>
    </style>

    <style name="social_auth_icon_style">
        <item name="android:layout_width">@dimen/auth_social_icon</item>
        <item name="android:layout_height">@dimen/auth_social_icon</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_margin">@dimen/activity_margin_relative</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:contentDescription">@string/auth_facebook_description</item>
        <item name="android:padding">@dimen/activity_margin_relative</item>
    </style>

    <style name="thread_menu">
        <item name="android:layout_margin">@dimen/activity_margin_relative</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:drawablePadding">@dimen/activity_margin_relative</item>
        <item name="android:textColor">@color/iconsTextColor</item>
    </style>

    <style name="thread_feed_bar_item">
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/activity_margin_relative</item>
    </style>

</resources>
