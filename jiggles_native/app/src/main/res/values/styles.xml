<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primaryTextColor</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="AppThemeBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/primaryTextColor</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="ExoMediaButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">@dimen/exo_player_button_dimen</item>
        <item name="android:layout_height">@dimen/exo_player_button_dimen</item>
        <item name="android:layout_margin">@dimen/activity_margin_closer</item>
    </style>

    <style name="social_auth_icon_style">
        <item name="android:layout_width">@dimen/auth_social_icon</item>
        <item name="android:layout_height">@dimen/auth_social_icon</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_margin">@dimen/activity_margin_relative</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:contentDescription">@string/auth_facebook_description</item>
        <item name="android:padding">@dimen/activity_margin_relative</item>
    </style>

    <style name="thread_menu">
        <item name="android:layout_margin">@dimen/activity_margin_relative</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:drawablePadding">@dimen/activity_margin_relative</item>
        <item name="android:textColor">@color/iconsTextColor</item>
    </style>

    <style name="thread_feed_bar_item">
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/activity_margin_relative</item>
    </style>

    <style name="auth_edit_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/activity_margin_sibling</item>
        <item name="android:textColor">@color/searchDarkColor</item>
        <item name="android:textSize">@dimen/activity_text_subspan</item>
        <item name="android:paddingLeft">@dimen/activity_margin_closer</item>
        <item name="android:paddingStart">@dimen/activity_margin_closer</item>
        <item name="android:paddingEnd">@dimen/activity_margin_closer</item>
        <item name="android:paddingRight">@dimen/activity_margin_closer</item>
        <item name="android:paddingTop">@dimen/activity_margin_relative</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="auth_edit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:maxWidth">280dp</item>
        <item name="android:minWidth">280dp</item>
        <item name="android:paddingTop">@dimen/activity_margin_nano</item>
        <item name="android:paddingBottom">@dimen/activity_margin_relative</item>
        <item name="android:paddingLeft">@dimen/activity_margin_closer</item>
        <item name="android:paddingStart">@dimen/activity_margin_closer</item>
        <item name="android:paddingRight">@dimen/activity_margin_closer</item>
        <item name="android:paddingEnd">@dimen/activity_margin_closer</item>
        <item name="android:textSize">@dimen/activity_text_subparagraph</item>
    </style>

    <style name="auth_edit_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/border_view</item>
        <item name="android:layout_marginBottom">@dimen/activity_margin_relative</item>
        <item name="android:layout_marginTop">@dimen/activity_margin_relative</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
